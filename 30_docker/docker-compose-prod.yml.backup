version: '3.8'

services:
  mangetamain-prod:
    image: python:3.13.3-slim
    container_name: mange_prod
    environment:
      - APP_ENV=PROD
    ports:
      - "8501:8501"
    volumes:
      - ../20_prod/streamlit:/app/streamlit:ro
      - ../20_prod/data:/app/data
      - ../20_prod/logs:/app/logs
      - ../20_prod/pyproject.toml:/app/pyproject.toml:ro
      - ../20_prod/uv.lock:/app/uv.lock:ro
      - ../20_prod/README.md:/app/README.md:ro
      - ../20_prod/utils:/app/utils:ro
      - ../96_keys:/app/../96_keys:ro  # Monter les credentials en READ-ONLY
    working_dir: /app
    command: >
      bash -c "
        apt-get update && 
        apt-get install -y curl && 
        pip install uv && 
        uv sync && 
        uv run streamlit run streamlit/main.py 
        --server.address 0.0.0.0 
        --server.port 8501 
        --server.headless true
      "
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8501"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s

networks:
  default:
    name: mangetamain-prod-network
